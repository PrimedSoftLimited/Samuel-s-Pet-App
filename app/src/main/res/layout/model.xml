<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/animal_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:src="@drawable/assensian_dog" />

        <TextView
            android:id="@+id/animal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/animal_img"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:textSize="18sp"
            android:text="Assensian Dog"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/animal_description"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_toRightOf="@id/animal_img"
            android:layout_below="@id/animal_name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:textSize="16sp"
            android:text="American breed. Police Dog. Good in flight..." />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_delete_black_24dp"
            android:clickable="true"
            android:layout_below="@id/animal_description"
            android:layout_marginLeft="300dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>

