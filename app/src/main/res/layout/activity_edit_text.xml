<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_margin="16dp"

    tools:context=".Edit_Text">

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="250dp"
        android:background="@color/colorPrimary"
        android:padding="16dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/pet_edit_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/assensian_dog" />

        <EditText
            android:id="@+id/pet_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:layout_toRightOf="@id/pet_edit_img"
            android:background="@drawable/curved_box"
            android:hint="Name of animal" />

        <EditText
            android:id="@+id/pet_edit_description"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/pet_edit_name"
            android:layout_marginLeft="16dp"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/pet_edit_img"
            android:background="@drawable/curved_box"
            android:hint="Description..."
            android:textSize="16sp" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_edit_description"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="18dp"
            android:background="@color/white"
            android:text="SAVE"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>

</android.support.v7.widget.CardView>